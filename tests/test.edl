let tasks = [];

fn show_menu() {
    print("=== Gestionnaire de tâches ===");
    print("1. Ajouter une tâche");
    print("2. Lister les tâches");
    print("3. Supprimer une tâche");
    print("4. Quitter");
    print("==============================");
    print("-> entrer le numéro : ");
}

fn add_task() {
    print("Entrez la nouvelle tâche :");
    let t = input();
    tasks = tasks.push(t);
    print("Tâche ajoutée !");
}

fn list_tasks() {
    if length(tasks) == 0 {
        print("Aucune tâche.");
    } else {
        print("Vos tâches :");
        let i = 0;
        while i < length(tasks) {
            print(i + 1 + ". " + tasks[i]);
            i = i + 1;
        }
    }
}

fn remove_task() {
    print("Numéro de la tâche à supprimer :");
    let n = to_number(input()) - 1;
    if n >= 0 && n < length(tasks) {
        tasks = tasks.remove(n); // <-- MAJ de la variable globale
        print("Tâche supprimée !");
    } else {
        print("Numéro invalide.");
    }
}

let running = true;
while running {
    show_menu();
    let choice = input();
    if choice == "1" {
        add_task();
    } else if choice == "2" {
        list_tasks();
    } else if choice == "3" {
        remove_task();
    } else if choice == "4" {
        running = false;
        print("Au revoir !");
    } else {
        print("Choix invalide.");
    }
}