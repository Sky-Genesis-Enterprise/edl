let tasks = [];

fn show_menu() {
    print("=== Gestionnaire de tâches ===");
    print("1. Ajouter une tâche");
    print("2. Lister les tâches");
    print("3. Supprimer une tâche");
    print("4. Quitter");
}

fn add_task() {
    print("Entrez la nouvelle tâche :");
    let t = input();
    tasks.push(t);
    print("Tâche ajoutée !");
}

fn list_tasks() {
    if tasks.length() == 0 {
        print("Aucune tâche.");
    } else {
        print("Vos tâches :");
        let i = 0;
        while i < tasks.length() {
            print(i + 1 + ". " + tasks[i]);
            i = i + 1;
        }
    }
}

fn remove_task() {
    print("Numéro de la tâche à supprimer :");
    let n = to_number(input()) - 1;
    if n >= 0 && n < tasks.length() {
        tasks.remove(n);
        print("Tâche supprimée !");
    } else {
        print("Numéro invalide.");
    }
}

let running = true;
while running {
    show_menu();
    let choice = input();
    if choice == "1" {
        add_task();
    } else if choice == "2" {
        list_tasks();
    } else if choice == "3" {
        remove_task();
    } else if choice == "4" {
        running = false;
        print("Au revoir !");
    } else {
        print("Choix invalide.");
    }
}