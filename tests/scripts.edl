// fonction pour ajouter une tâche 
fn add_task() {
    print("Entrez la nouvelle tâche :");
    let t = input();
    tasks = tasks.push(t);
    print("Tâche ajoutée !");
}

// fonction pour lister les tâches en court 
fn list_tasks() {
    if length(tasks) == 0 {
        print("Aucune tâche.");
    } else {
        print("Vos tâches :");
        let i = 0;
        while i < length(tasks) {
            print(i + 1 + ". " + tasks[i]);
            i = i + 1;
        }
    }
}

// fonction pour supprimer une tâche 
fn remove_task() {
    print("Numéro de la tâche à supprimer :");
    let n = to_number(input()) - 1;
    if n >= 0 && n < length(tasks) {
        tasks = tasks.remove(n);
        print("Tâche supprimée !");
    } else {
        print("Numéro invalide.");
    }
}

fn show_menu_system() {
    print("=== Gestionnnaire de pilote système ==="); 
    print("1. "); 

    print("4. Quitter")
    print("=======================================")
    print("-> entrer le numéro : ");
}


while running {
    if menu == "main" {
        show_menu();
        let choice = input();
        if choice == "1" {
            menu = "project";
        } else if choice == "4" {
            running = false;
            print("Au revoir !");
        } else {
            print("Choix invalide.");
        }
    } else if menu == "project" {
        show_menu_project();
        let choice = input();
        if choice == "1" {
            add_task();
        } else if choice == "2" {
            list_tasks();
        } else if choice == "3" {
            remove_task();
        } else if choice == "4" {
            menu = "main";
        } else {
            print("Choix invalide.");
        }
    }
}